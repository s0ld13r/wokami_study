<% @page_title = " create tag "%>
<div><%= link_to('<< Back to list of tags', action: 'index') %></div>
<h1>Create new tag</h1>
<%= form_for(:tag , :url => {action: 'create'}) do |f| %>
	<table>
	<tr>
		<th><%= f.label(:name, "Name") %></th>
		<td><%= f.text_field(:name)%></td>
	</tr>
	<tr>
		<th>Category</th>
		<td><%= f.select(:category_id, @categories.map { |cat| [cat.name, cat.id]}) %></td>
	</tr>
</table>
	<%= submit_tag("Create Tag") %>
<% end %>