<% @page_title = " edit tag "%>
<div><%= link_to('<< Back to list of tags', action: 'index') %></div>
<h1>Edit tag</h1>
<%= form_for(:tag , :url => {action: 'update', id: @tag.id}) do |f| %>
	<table>
	<tr>
		<th><%= f.label(:name, "Name") %></th>
		<td><%= f.text_field(:name)%></td>
	</tr>
	<tr>
		<th>Category</th>
		<td><%= f.select(:category_id, options_for_select(@categories.map { |cat| [cat.name, cat.id]}, :selected => @tag.category.id)) %></td>
	</tr>
</table>
	<%= submit_tag("Update Tag") %>
<% end %>