<% @page_title = " create post "%>
<div><%= link_to('<< Back to list of posts', action: 'index') %></div>
<h1>Create new post</h1>
<%= form_for(:post , :url => {action: 'create'}) do |f| %>
	<table>
	<tr>
		<th><%= f.label(:title, "Title") %></th>
		<td><%= f.text_field(:title)%></td>
	</tr>
	<tr>
		<th><%= f.label(:description, "Description") %></th>
		<td><%= f.text_field(:description)%></td>
	</tr>
	<tr>
		<th><%= f.label(:url, "URL") %></th>
		<td><%= f.text_field(:url)%></td>
	</tr>
	<tr>
		<th>Tags</th>
		<td><%= f.select(:tag_ids, @tags.map { |tag| [tag.name, tag.id]} ,{} ,{multiple: true, class: "input-lg"}) %></td>
	</tr>
</table>
	<%= submit_tag("Create Tag") %>
<% end %>